{
  "info": {
    "name": "Personalization System APIs",
    "description": "API collection for testing the No-ML Personalization System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Track Signal",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"user123\",\n  \"eventType\": \"view_engaged\",\n  \"movieId\": \"movie456\",\n  \"metadata\": {\n    \"progressSeconds\": 120,\n    \"source\": \"chatbot\",\n    \"deviceType\": \"mobile\"\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/personalization/track",
          "host": ["{{baseUrl}}"],
          "path": ["api", "personalization", "track"]
        },
        "description": "Track user behavior signal (view_start, view_engaged, add_wishlist, etc.)"
      }
    },
    {
      "name": "Track Signal - View Start",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"user123\",\n  \"eventType\": \"view_start\",\n  \"movieId\": \"movie456\",\n  \"metadata\": {\n    \"source\": \"homepage\"\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/personalization/track",
          "host": ["{{baseUrl}}"],
          "path": ["api", "personalization", "track"]
        }
      }
    },
    {
      "name": "Track Signal - Add Wishlist",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"user123\",\n  \"eventType\": \"add_wishlist\",\n  \"movieId\": \"movie789\",\n  \"metadata\": {\n    \"source\": \"detail_page\"\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/personalization/track",
          "host": ["{{baseUrl}}"],
          "path": ["api", "personalization", "track"]
        }
      }
    },
    {
      "name": "Get Personalized Recommendations",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/personalization/recommendations/:userId?limit=20",
          "host": ["{{baseUrl}}"],
          "path": ["api", "personalization", "recommendations", ":userId"],
          "query": [
            {
              "key": "limit",
              "value": "20",
              "description": "Number of recommendations to return"
            }
          ],
          "variable": [
            {
              "key": "userId",
              "value": "user123"
            }
          ]
        },
        "description": "Get personalized movie recommendations based on user profile and preferences"
      }
    },
    {
      "name": "Get Recently Watched",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/personalization/history/recent/:userId?limit=20",
          "host": ["{{baseUrl}}"],
          "path": ["api", "personalization", "history", "recent", ":userId"],
          "query": [
            {
              "key": "limit",
              "value": "20",
              "description": "Number of recent movies to return"
            }
          ],
          "variable": [
            {
              "key": "userId",
              "value": "user123"
            }
          ]
        },
        "description": "Get user's recently watched movies (watch history)"
      }
    },
    {
      "name": "Update User Profile (Manual)",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/personalization/profile/update/:userId",
          "host": ["{{baseUrl}}"],
          "path": ["api", "personalization", "profile", "update", ":userId"],
          "variable": [
            {
              "key": "userId",
              "value": "user123"
            }
          ]
        },
        "description": "Manually trigger profile update for a user (for testing)"
      }
    },
    {
      "name": "Track Multiple Signals (Batch Test)",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "// This script will run multiple track requests",
              "const userId = 'user123';",
              "const movies = ['movie001', 'movie002', 'movie003', 'movie004', 'movie005'];",
              "const eventTypes = ['view_start', 'view_engaged', 'view_end', 'add_wishlist'];",
              "",
              "pm.environment.set('test_userId', userId);"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"user123\",\n  \"eventType\": \"view_engaged\",\n  \"movieId\": \"movie001\",\n  \"metadata\": {\n    \"progressSeconds\": 300,\n    \"totalDuration\": 1200,\n    \"source\": \"search\"\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/personalization/track",
          "host": ["{{baseUrl}}"],
          "path": ["api", "personalization", "track"]
        },
        "description": "Track multiple signals for testing profile building"
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    }
  ]
}

